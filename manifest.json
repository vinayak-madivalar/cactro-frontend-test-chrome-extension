{
  "manifest_version": 3,
  "name": "Text highlighter",
  "version": "1.0",
  "description": "A chrome extension that allows users to highlight text on any webpage and save highlights locally.",
  "permissions": ["storage", "activeTab", "scripting"],
  "icons": {
    "48": "icon48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
